<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mainLayout"
            type="cn.xj.kokoro.mobile.album.PhotoSelectorActivityKt" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:layout_height="@dimen/dp_100"/>
        <ImageView
            android:contentDescription="@string/_return"
            android:id="@+id/layoutToolbarIcon"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/back_icon"
            app:layout_constraintLeft_toLeftOf="@id/toolbar"
            android:layout_marginStart="@dimen/dp_64"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar" />
        <View
            android:id="@+id/layoutToolbarIconClick"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintLeft_toLeftOf="@id/toolbar"
            android:layout_marginStart="@dimen/dp_34"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>
        <View
            android:layout_width="1dp"
            android:id="@+id/center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="1dp"/>

        <TextView
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            android:textStyle="bold"
            android:id="@+id/titleView"
            android:gravity="center"
            android:maxWidth="@dimen/dp_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/center"
            app:layout_constraintEnd_toStartOf="@id/arrow"
            android:textSize="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_6"
            android:text="@string/all_phone"
            android:textColor="@color/colorTextMain"/>
        <ImageView
            android:contentDescription="@string/change_folder"
            android:id="@+id/arrow"
            android:layout_marginStart="@dimen/dp_6"
            app:layout_constraintTop_toTopOf="@id/titleView"
            app:layout_constraintBottom_toBottomOf="@id/titleView"
            app:layout_constraintStart_toEndOf="@id/titleView"
            app:layout_constraintEnd_toEndOf="@id/center"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/ic_photo_selector"/>

        <com.google.android.material.button.MaterialButton
            android:minWidth="@dimen/dp_0"
            android:id="@+id/finishButton"
            android:textSize="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_88"
            android:layout_marginEnd="@dimen/dp_30"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:cornerRadius="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_65"/>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srlAccentColor="@color/colorTextMain"
            app:srlEnableLoadMoreWhenContentNotFull="false"
            app:srlEnablePreviewInEditMode="false"
            app:srlDisableContentWhenLoading="true"
            app:srlEnableRefresh="false"
            app:srlEnableLoadMore="true"
            app:srlFooterTranslationViewId="@+id/scrollView"
            app:srlHeaderHeight="@dimen/dp_0"
            app:srlPrimaryColor="@color/mainBack">
            <androidx.recyclerview.widget.RecyclerView
                style="@style/Recycler"
                android:layout_width="match_parent"
                android:transitionName="showImage"
                android:layout_height="match_parent"
                android:id="@+id/recycler"/>
            <com.scwang.smart.refresh.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlClassicsSpinnerStyle="FixedBehind" />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <View
            android:id="@+id/alphaView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:background="#1E000000"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

