<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="280dp"/>

    <View
        android:layout_marginHorizontal="12dp"
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_white_top_10"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"/>


    <TextView
        android:textSize="15dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/contentLayout"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/contentLayout"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:id="@+id/companyName"/>

    <com.mobile.hotel.StarProgressView
        app:layout_constraintTop_toBottomOf="@id/companyName"
        app:layout_constraintStart_toStartOf="@id/contentLayout"
        android:layout_marginStart="10dp"
        android:id="@+id/starView"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="12dp"/>

    <TextView
        android:textColor="@color/red"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starCount"
        app:layout_constraintStart_toEndOf="@id/starView"
        app:layout_constraintTop_toTopOf="@id/starView"
        app:layout_constraintBottom_toBottomOf="@id/starView"
        android:layout_marginStart="6dp"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/price"
        android:layout_width="0dp"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/companyName"
        android:layout_marginTop="14dp"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/phone"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="@id/contentLayout"
        android:layout_marginTop="4dp"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/address"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="@id/contentLayout"
        android:layout_marginTop="4dp"/>




    <androidx.cardview.widget.CardView
        android:id="@+id/timeLayout"
        app:cardCornerRadius="2dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/address"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/startTime"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingHorizontal="2dp"
                android:paddingVertical="1dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/centerFlag"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/endTime"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/type1Layout"
        app:cardBackgroundColor="@color/content_main"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timeLayout"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/type1button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="预定"
                android:background="@drawable/shape_green_top_10"/>
            <TextView
                android:textSize="16dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/type1button"
                app:layout_constraintTop_toTopOf="parent"
                android:text="高级大床房，不含早 >"
                android:id="@+id/type1Text"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="12dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/type1button"
                app:layout_constraintTop_toBottomOf="@id/type1Text"
                android:text="45m² 不含早餐 大床 有窗"
                android:id="@+id/type1hint"
                android:textColor="@color/color_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/type1price"
                android:layout_width="0dp"
                android:textColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/type2Layout"
        app:cardBackgroundColor="@color/content_main"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type1Layout"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/type2button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="预定"
                android:background="@drawable/shape_green_top_10"/>
            <TextView
                android:textSize="16dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/type2button"
                app:layout_constraintTop_toTopOf="parent"
                android:text="高级大床房，单早 >"
                android:id="@+id/type2Text"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="12dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/type2button"
                app:layout_constraintTop_toBottomOf="@id/type2Text"
                android:text="45m² 含单早 大床 有窗"
                android:id="@+id/type2hint"
                android:textColor="@color/color_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/type2price"
                android:layout_width="0dp"
                android:textColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/type3Layout"
        app:cardBackgroundColor="@color/content_main"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type2Layout"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/type3button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="预定"
                android:background="@drawable/shape_green_top_10"/>
            <TextView
                android:textSize="16dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/type3button"
                app:layout_constraintTop_toTopOf="parent"
                android:text="高级大床房，双早 >"
                android:id="@+id/type3Text"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="12dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/type3button"
                app:layout_constraintTop_toBottomOf="@id/type3Text"
                android:text="45m² 含双早 大床 有窗"
                android:id="@+id/type3hint"
                android:textColor="@color/color_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/type3price"
                android:layout_width="0dp"
                android:textColor="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>