<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/rootLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/content_main"/>

        <TextView
            android:textSize="15dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:id="@+id/companyName"/>

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/address"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/color_333"
            app:layout_constraintTop_toBottomOf="@id/companyName"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:layout_marginTop="4dp"/>

        <HorizontalScrollView
            android:id="@+id/scroll"
            app:layout_constraintTop_toBottomOf="@id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/servicesTagLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>

        </HorizontalScrollView>

        <com.mobile.hotel.StarProgressView
            app:layout_constraintTop_toBottomOf="@id/scroll"
            app:layout_constraintStart_toEndOf="@id/imageView"
            android:layout_marginStart="10dp"
            android:id="@+id/starView"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="12dp"/>

        <TextView
            android:textColor="@color/red"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starCount"
            app:layout_constraintStart_toEndOf="@id/starView"
            app:layout_constraintTop_toTopOf="@id/starView"
            app:layout_constraintBottom_toBottomOf="@id/starView"
            android:layout_marginStart="6dp"/>

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/scroll"
            android:layout_marginTop="14dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>